	<body>
		<!-- header -->
		<%-include('./partials/header')%>
			<!-- ------ -->

				<!-- modals/ventanas emergentes -->
				<%-include('./partials/modals')%>
					<!-- //modals/ventanas emergentes-->

					<!-- banner Carrousel-->
					<div id="myCarousel" class="carousel slide" data-ride="carousel">
						<!-- Indicators -->
						<ol class="carousel-indicators">
							<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
							<li data-target="#myCarousel" data-slide-to="1" class=""></li>
						</ol>
						<div class="carousel-inner" role="listbox">
							<div class="item active">
								<div class="container">
									<div class="carousel-caption">
										<h3>Las mejores <span>Rebajas</span></h3>
										<p>El especial para todos</p>
										<a class="hvr-outline-out button2" href="/products/rebajas">Ver ahora</a>
									</div>
								</div>
							</div>
							<div class="item item3">
								<div class="container">
									<div class="carousel-caption">
										<h3>Para <span>Todos</span></h3>
										<p>Ropa 24/7</p>
										<a class="hvr-outline-out button2" href="/products/all">Ver ahora</a>
									</div>
								</div>
							</div>
						</div>
						<a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
							<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
							<span class="sr-only">Previous</span>
						</a>
						<a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
							<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
							<span class="sr-only">Next</span>
						</a>
						<!-- The Modal -->
					</div>
					<!-- banner-bootom-w3-agileits -->
					<div class="banner-bootom-w3-agileits">
						<div class="container">
							<h3 class="wthree_text_info">Con <span>Rebaja</span></h3>

							<div class="col-md-5 bb-grids bb-left-agileits-w3layouts">
								<a href="/products/discount/sale50">
									<div class="bb-left-agileits-w3layouts-inner grid">
										<figure class="effect-roxy">
											<img src="images/bb1.jpg" alt=" " class="img-responsive" />
											<figcaption>
												<h3><span>D</span>escuento </h3>
												<h5>para tí</h5>
												<p>hasta 50%</p>
											</figcaption>
										</figure>
									</div>
								</a>
							</div>
							<div class="col-md-7 bb-grids bb-middle-agileits-w3layouts">
								<a href="/products/discount/sale30">
									<div class="bb-middle-agileits-w3layouts grid">
										<figure class="effect-roxy">
											<img src="images/bottom3.jpg" alt=" " class="img-responsive" />
											<figcaption>
												<h3><span>D</span>escuento </h3>
												<h5>para tí</h5>
												<p>hasta 30%</p>
											</figcaption>
										</figure>
									</div>
								</a>
								<a href="/products/discount/sale20">
									<div class="bb-middle-agileits-w3layouts forth grid">
										<figure class="effect-roxy">
											<img src="images/bottom4.jpg" alt=" " class="img-responsive">
											<figcaption>
												<h3><span>D</span>escuento </h3>
												<h5>para tí</h5>
												<p>hasta 20%</p>
											</figcaption>
										</figure>
									</div>
								</a>
								<div class="clearfix"></div>
							</div>
							
						</div>						
					</div>
					<div class="new_arrivals_agile_w3ls_info">
						<div class="container">
							<h3 class="wthree_text_info">Nuestros <span>Productos</span></h3>
							<div id="horizontalTab">
								<div class="resp-tabs-container">
									<!--/tab_one-->
									<div class="tab1">
										<!-- Tarjeta ejemplo para un producto -->
										<% let i = 0 %> 
										<% productos.forEach(producto => {%>
											<div class="col-md-3 product-men">										
												<div class="men-pro-item simpleCart_shelfItem">
													<a href="/products/detail/<%= marcsName[i] %> ">										
													<div class="men-thumb-item">
														
															<img src="images/<%= producto.imagen[0].name %>" alt="" class="pro-image-front">
															<img src="images/<%= producto.imagen[0].name %>" alt="" class="pro-image-back">
														
													</div>
													</a>
													<div class="item-info-product ">
														<h4><a href="/products/detail/<%= marcsName[i] %> "><%= producto.name.toUpperCase() %> </a></h4>
														<div class="info-product-price">
															<% if (producto.discount) { %>
																<span class="item_price">$<%= thousand(producto.price-(producto.price*producto.discount/100)) %> </span>
																<del>$<%= thousand(producto.price) %> </del>
															<% }else{ %>
																<span class="item_price">$<%= thousand(producto.price) %> </span>
															<%}%>
														</div>
	
														<div class="grid-productos">
															
															<div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
																<a href="/products/detail/<%= marcsName[i] %> "><button class="button">Ver</button></a>
															</div>
																	
															<div class="snipcart-details top_brand_home_details item_add single-item hvr-outline-out button2">
																<a href="<%= producto.linkpago %> "><button class="button">Comprar</button></a>
															</div>
														</div>						
													</div>
												</div>
											</div>
											<% i= i+1%>
										<%}); %> 
										
										<!-- Fin de la una tarjeta -->

										
										<div class="clearfix"></div>
									</div>
								</div>
							</div>
						</div>
					</div>
